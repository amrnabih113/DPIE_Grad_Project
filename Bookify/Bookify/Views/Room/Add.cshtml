
@model Bookify.Models.ViewModels.AddRoomViewModel
@{
    ViewData["Title"] = "Add Room";
}

<style>
    .form-container {
        background: white;
        padding: var(--spacing-xl);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        margin-top: var(--spacing-xl);
    }

    .form-section-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-primary);
        margin-bottom: var(--spacing-lg);
        padding-bottom: var(--spacing-sm);
        border-bottom: 1px solid var(--color-gray-200);
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-lg);
    }

    .full-width {
        grid-column: 1 / -1;
    }

    .amenities-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: var(--spacing-sm);
        margin-top: var(--spacing-sm);
    }

    .amenity-checkbox {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
        padding: var(--spacing-sm);
        border: 1px solid var(--color-gray-200);
        border-radius: var(--radius-md);
        cursor: pointer;
        transition: 0.2s;
    }

        .amenity-checkbox:hover {
            background: var(--color-gray-50);
            border-color: var(--color-primary);
        }

    .form-control, .form-select {
        padding: 0.75rem;
        border-radius: var(--radius-md);
        border: 1px solid var(--color-gray-200);
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-primary);
            box-shadow: 0 0 0 2px rgba(30, 58, 95, 0.1);
        }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<main class="py-8">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <a asp-controller="Room" asp-action="Index" class="text-gray" style="text-decoration:none; display:inline-flex; align-items:center; gap:0.5rem; margin-bottom:0.5rem;">
                    <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                    Back to Rooms
                </a>
                <h1 class="text-primary">Add New Room</h1>
            </div>
        </div>

        <div class="form-container">
            <form asp-action="Add" method="post" enctype="multipart/form-data">

                <h3 class="form-section-title">Basic Information</h3>
                <div class="form-grid">
                    <div>
                        <label asp-for="Name" class="form-label fw-bold">Room Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Deluxe Ocean Suite" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="RoomNumber" class="form-label fw-bold">Room Number</label>
                        <input asp-for="RoomNumber" class="form-control" placeholder="e.g. 101" />
                        <span asp-validation-for="RoomNumber" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="RoomTypeId" class="form-label fw-bold">Room Type</label>
                        <select asp-for="RoomTypeId" class="form-select" asp-items="Model.RoomTypes">
                            <option value="">-- Select Room Type --</option>
                        </select>
                        <span asp-validation-for="RoomTypeId" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="PriceForNight" class="form-label fw-bold">Price Per Night ($)</label>
                        <input asp-for="PriceForNight" class="form-control" type="number" min="0" step="0.01" />
                        <span asp-validation-for="PriceForNight" class="text-danger small"></span>
                    </div>
                </div>

                <h3 class="form-section-title mt-4">Details & Capacity</h3>
                <div class="form-grid">
                    <div>
                        <label asp-for="MaxGuests" class="form-label fw-bold">Max Guests</label>
                        <input asp-for="MaxGuests" class="form-control" type="number" min="1" />
                        <span asp-validation-for="MaxGuests" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="NoOfBeds" class="form-label fw-bold">Number of Beds</label>
                        <input asp-for="NoOfBeds" class="form-control" type="number" min="1" />
                        <span asp-validation-for="NoOfBeds" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="Area" class="form-label fw-bold">Room Size (sq ft)</label>
                        <input asp-for="Area" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Area" class="text-danger small"></span>
                    </div>

                    <div class="d-flex align-items-center mt-4">
                        <div class="form-check form-switch">
                            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" style="width: 3rem; height: 1.5rem;" />
                            <label asp-for="IsAvailable" class="form-check-label ms-2 fw-bold">Available for Booking</label>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the room features, view, and ambiance..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <h3 class="form-section-title mt-4">Discounts</h3>
                <div class="form-check mb-3">
                    <input asp-for="HasDiscount" class="form-check-input" type="checkbox" id="hasDiscountCheckbox" />
                    <label asp-for="HasDiscount" class="form-check-label fw-bold">Apply Discount?</label>
                </div>

                <div id="discountInputDiv" style="display:none; max-width: 300px;">
                    <label asp-for="DiscountPercentage" class="form-label fw-bold">Discount Percentage (%)</label>
                    <div class="input-group">
                        <input asp-for="DiscountPercentage" class="form-control" type="number" min="0" max="100" />
                        <span class="input-group-text">%</span>
                    </div>
                    <span asp-validation-for="DiscountPercentage" class="text-danger small"></span>
                </div>

                <h3 class="form-section-title mt-4">Amenities & Media</h3>

                <div class="mb-4">
                    <label class="form-label fw-bold mb-2">Amenities</label>
                    <div class="amenities-grid">
                        @foreach (var amenity in Model.Amenities)
                        {
                            var isChecked = Model.SelectedAmenityIds.Contains(int.Parse(amenity.Value));
                            <label class="amenity-checkbox">
                                <input type="checkbox" name="SelectedAmenityIds" value="@amenity.Value" @(isChecked ? "checked" : "") class="form-check-input mt-0" />
                                <span>@amenity.Text</span>
                            </label>
                        }
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="RoomImages" class="form-label fw-bold">Upload Images</label>
                    <input asp-for="RoomImages" type="file" multiple class="form-control" accept="image/*" />
                    <div class="form-text text-gray">You can select multiple images. Supported formats: JPG, PNG.</div>
                    <span asp-validation-for="RoomImages" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5 pt-4 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary px-5">Add Room</button>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const checkbox = document.getElementById('hasDiscountCheckbox');
            const discountDiv = document.getElementById('discountInputDiv');

            function toggleDiscount() {
                if (checkbox.checked) {
                    discountDiv.style.display = 'block';
                } else {
                    discountDiv.style.display = 'none';
                }
            }

            checkbox.addEventListener('change', toggleDiscount);

            toggleDiscount();
        });
    </script>
}