@using System.Linq
@model Bookify.Models.ViewModels.RoomDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<style>
    .image-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--spacing-md);
        margin-bottom: var(--spacing-2xl);
    }

    .gallery-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: var(--radius-lg);
        cursor: pointer;
        transition: transform var(--transition-base);
    }

        .gallery-image:hover {
            transform: scale(1.02);
        }

    .main-image {
        grid-column: 1 / -1;
        height: 500px;
    }

    .room-info-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: var(--spacing-2xl);
        margin-top: var(--spacing-2xl);
    }


    @@media (max-width: 1024px) {
        .room-info-grid {
            grid-template-columns: 1fr;
        }
    }

    .info-card {
        background: white;
        padding: var(--spacing-xl);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        position: sticky;
        top: calc(5rem + var(--spacing-lg));
        height: fit-content;
    }

    .highlights-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-md);
        margin-top: var(--spacing-md);
    }

    .highlight-item {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
        padding: var(--spacing-md);
        background: var(--color-gray-50);
        border-radius: var(--radius-md);
    }

    .amenities-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: var(--spacing-md);
        margin-top: var(--spacing-md);
    }

    .amenity-item {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
    }

    .star {
        color: #d1d5db; 
        transition: color 0.2s;
    }

    .star-rating-input:hover .star {
        color: #fbbf24; 
    }
</style>

<main class="py-8">
    <div class="container">
        <a asp-controller="Room" asp-action="Index" class="text-gray"
           style="display: inline-flex; align-items: center; gap: var(--spacing-sm); margin-bottom: var(--spacing-lg);">
            <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                      d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                      clip-rule="evenodd" />
            </svg>
            Back to Rooms
        </a>

        <div class="image-gallery">
            @if (Model.RoomImages != null && Model.RoomImages.Any())
            {
                var mainImage = Model.RoomImages.First();
                <img src="@mainImage.ImageUrl" alt="@Model.Name" class="gallery-image main-image"
                     onerror="this.src='https://via.placeholder.com/1200x500/1E3A5F/D4AF37?text=@Uri.EscapeDataString(Model.Name ?? "Room")'">

                @foreach (var img in Model.RoomImages.Skip(1))
                {
                    <img src="@img.ImageUrl" alt="@Model.Name" class="gallery-image"
                         onerror="this.src='https://via.placeholder.com/600x300/1E3A5F/D4AF37?text=@Uri.EscapeDataString(Model.Name ?? "Room")'">
                }
            }
            else
            {
                <img src="https://via.placeholder.com/1200x500/1E3A5F/D4AF37?text=No+Images" alt="No Images" class="gallery-image main-image">
            }
        </div>

        <div class="room-info-grid">
            <div>
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: var(--spacing-md);">
                    <div>
                        <h1 class="text-primary mb-2">@Model.Name</h1>
                        <p class="text-gray" style="font-size: var(--font-size-lg);">Luxury Room</p>
                    </div>

                    <button class="btn btn-light rounded-circle favorite-btn shadow-sm"
                            data-room-id="@Model.Id"
                            style="width: 45px; height: 45px; padding: 0; display: flex; align-items: center; justify-content: center; border: 1px solid #e5e7eb;">
                        <i class="@(Model.IsFavorite ? "fa-solid fa-heart" : "fa-regular fa-heart")"
                           style="font-size: 1.5rem; @(Model.IsFavorite ? "color: #ff0000;" : "")">
                        </i>
                    </button>

                    @if (Model.DiscountPercentage.HasValue && Model.DiscountPercentage > 0)
                    {
                        <div class="badge badge-primary" style="font-size: var(--font-size-base); background-color: #ef4444; margin-left: 10px;">
                            @Model.DiscountPercentage% OFF
                        </div>
                    }
                </div>

                <div style="display: flex; align-items: center; gap: var(--spacing-md); margin-bottom: var(--spacing-xl);">
                    <div style="display:flex;">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <svg width="20" height="20" viewBox="0 0 20 20" fill="@(i <= Model.Rating ? "var(--color-accent)" : "#e5e7eb")">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                        }
                    </div>
                    <span class="text-gray">@Model.NumberOfReviews reviews</span>
                </div>

                <p class="text-gray mb-6" style="font-size: var(--font-size-lg); line-height: var(--line-height-relaxed); width:100%; max-width:700px; overflow-wrap:break-word;">
                    @Model.Description
                </p>

                <div class="card mb-6">
                    <div class="card-content">
                        <h3 class="text-primary mb-3">Room Details</h3>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: var(--spacing-lg);">
                            <div>
                                <p class="text-gray" style="font-size: var(--font-size-sm); margin-bottom: var(--spacing-xs);">Max Guests</p>
                                <p style="font-weight: var(--font-weight-semibold);">@Model.NumberOfGusts Guests</p>
                            </div>
                            <div>
                                <p class="text-gray" style="font-size: var(--font-size-sm); margin-bottom: var(--spacing-xs);">Room Size</p>
                                <p style="font-weight: var(--font-weight-semibold);">@Model.Area sq ft</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <h3 class="text-primary mb-3">Amenities</h3>
                    <div class="amenities-grid">
                        @if (Model.Amenities != null)
                        {
                            @foreach (var amenity in Model.Amenities)
                            {
                                <div class="amenity-item">
                                    <svg width="16" height="16" viewBox="0 0 20 20" fill="var(--color-primary)">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                    </svg>
                                    <span>@amenity.Name</span>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <div>
                <div class="info-card">
                    <div style="display: flex; align-items: baseline; gap: var(--spacing-sm); margin-bottom: var(--spacing-xl);">
                        <span style="font-size: var(--font-size-4xl); font-weight: var(--font-weight-bold); color: var(--color-primary);">$@Model.FinalPrice</span>
                        @if (Model.DiscountPercentage.HasValue && Model.DiscountPercentage > 0)
                        {
                            <span class="text-gray" style="text-decoration: line-through; font-size: 1rem;">$@Model.PricePerNight</span>
                        }
                        <span class="text-gray">/ night</span>
                    </div>

                    <a asp-controller="Booking" asp-action="Create" asp-route-roomId="@Model.Id"
                       class="btn btn-primary" style="width: 100%; font-size: var(--font-size-lg); padding: var(--spacing-md); text-align: center;">
                        Book Now
                    </a>

                    <div style="margin-top: var(--spacing-xl); padding-top: var(--spacing-xl); border-top: 1px solid var(--color-gray-200);">
                        <h4 style="margin-bottom: var(--spacing-md);">Why book with us?</h4>
                        <div style="display: flex; flex-direction: column; gap: var(--spacing-md);">
                            <div style="display: flex; gap: var(--spacing-sm);">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="var(--color-success)">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span style="font-size: var(--font-size-sm);">Free cancellation</span>
                            </div>
                            <div style="display: flex; gap: var(--spacing-sm);">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="var(--color-success)">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span style="font-size: var(--font-size-sm);">No prepayment needed</span>
                            </div>
                            <div style="display: flex; gap: var(--spacing-sm);">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="var(--color-success)">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span style="font-size: var(--font-size-sm);">Best price guarantee</span>
                            </div>
                            <div style="display: flex; gap: var(--spacing-sm);">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="var(--color-success)">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span style="font-size: var(--font-size-sm);">24/7 customer support</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="room-info-grid" style="margin-top: var(--spacing-2xl);">
            <div>
                @if (Model.CanAddReview)
                {
                    <div class="info-card" style="margin-bottom: var(--spacing-xl);">
                        <h3 class="text-primary mb-4">Write a Review</h3>
                        <form id="reviewForm">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="RoomId" value="@Model.Id" />

                            <div style="margin-bottom: var(--spacing-lg);">
                                <label style="display: block; margin-bottom: var(--spacing-sm); font-weight: var(--font-weight-semibold);">Rating</label>
                                <div class="star-rating-input" style="display: flex; gap: var(--spacing-xs); font-size: 2rem; cursor: pointer;">
                                    <span class="star" data-rating="1">☆</span>
                                    <span class="star" data-rating="2">☆</span>
                                    <span class="star" data-rating="3">☆</span>
                                    <span class="star" data-rating="4">☆</span>
                                    <span class="star" data-rating="5">☆</span>
                                </div>
                                <input type="hidden" name="Rating" id="ratingInput" value="0" />
                                <span id="ratingError" class="text-danger" style="display: none; font-size: var(--font-size-sm);">Please select a rating</span>
                            </div>
                            <div style="margin-bottom: var(--spacing-lg);">
                                <label for="comment" style="display: block; margin-bottom: var(--spacing-sm); font-weight: var(--font-weight-semibold);">Your Review</label>
                                <textarea name="Comment" id="comment" rows="5" class="form-control" placeholder="Share your experience..." style="width: 100%; padding: var(--spacing-md); border: 1px solid var(--color-gray-300); border-radius: var(--radius-md); font-family: inherit;"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary" style="width: 100%;">Submit Review</button>
                            <div id="reviewMessage" style="margin-top: var(--spacing-md);"></div>
                        </form>
                    </div>
                }
                <div class="info-card">
                    <h3 class="text-primary mb-4">Guest Reviews (@(Model.Reviews?.Count() ?? 0))</h3>

                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        <div id="reviewsList" style="display: flex; flex-direction: column; gap: var(--spacing-lg);">
                            @foreach (var review in Model.Reviews)
                            {
                                <div class="review-item" style="padding-bottom: var(--spacing-lg); border-bottom: 1px solid var(--color-gray-200);">
                                    <div style="display: flex; gap: var(--spacing-md); margin-bottom: var(--spacing-sm);">
                                        <div style="width: 48px; height: 48px; border-radius: 50%; background: var(--color-primary); color: white; display: flex; align-items: center; justify-content: center; font-weight: var(--font-weight-bold); font-size: var(--font-size-lg); flex-shrink: 0;">
                                            @review.UserName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div style="flex: 1;">
                                            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: var(--spacing-xs);">
                                                <div>
                                                    <p style="font-weight: var(--font-weight-semibold); margin-bottom: 2px;">@review.UserName</p>
                                                    <p style="font-size: var(--font-size-sm); color: var(--color-gray-500);">@review.CreatedAt.ToString("MMM dd, yyyy")</p>
                                                </div>
                                                <div class="star-rating-static" style="color: #fbbf24; font-size: var(--font-size-lg);">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <span>@(i <= review.Rating ? "★" : "☆")</span>
                                                    }
                                                </div>
                                            </div>
                                            <p style="color: var(--color-gray-700); line-height: 1.6;">@review.Comment</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-gray">No reviews yet. Be the first to review this room!</p>
                    }
                </div>
            </div>
        </div>

    </div>

</main>

@section Scripts {
    <script>
        $(function() {
            $(document).on('click', '.favorite-btn', function (e) {
                e.preventDefault();
                var btn = $(this);
                var icon = btn.find("i");

                $.post("/Favorite/Toggle", { roomId: btn.data("room-id") })
                    .done(function (data) {
                        if (data.isFavorite) {
                            icon.removeClass("fa-regular").addClass("fa-solid").css("color", "#ff0000");
                        } else {
                            icon.removeClass("fa-solid").addClass("fa-regular").css("color", "");
                        }
                    })
                    .fail(function (xhr) {
                        if (xhr.status === 401) {
                            alert("عفواً، يجب تسجيل الدخول أولاً.");
                            window.location.href = "/Identity/Account/Login";
                        }
                    });
            });
            $('.star').on('click', function() {
                var rating = $(this).data('rating');
                $('#ratingInput').val(rating);
                $('#ratingError').hide();

                $('.star').each(function(index) {
                    if (index < rating) {
                        $(this).text('★').css('color', '#fbbf24');
                    } else {
                        $(this).text('☆').css('color', '#d1d5db');
                    }
                });
            });

            $('#reviewForm').on('submit', function(e) {
                e.preventDefault();

                var rating = $('#ratingInput').val();
                if (rating == 0) {
                    $('#ratingError').show();
                    return;
                }

                var formData = $(this).serialize();
                var submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true).text('Submitting...');

                $.ajax({
                    url: '/Review/AddReview',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            $('#reviewMessage').html('<div class="alert alert-success mt-3" style="color: green;">' + response.message + '</div>');

                            var newReview = `
                                <div class="review-item fade-in" style="padding-bottom: var(--spacing-lg); border-bottom: 1px solid var(--color-gray-200);">
                                    <div style="display: flex; gap: var(--spacing-md); margin-bottom: var(--spacing-sm);">
                                        <div style="width: 48px; height: 48px; border-radius: 50%; background: var(--color-primary); color: white; display: flex; align-items: center; justify-content: center; font-weight: var(--font-weight-bold); font-size: var(--font-size-lg); flex-shrink: 0;">
                                            ${response.review.userName.substring(0, 1).toUpperCase()}
                                        </div>
                                        <div style="flex: 1;">
                                            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: var(--spacing-xs);">
                                                <div>
                                                    <p style="font-weight: var(--font-weight-semibold); margin-bottom: 2px;">${response.review.userName}</p>
                                                    <p style="font-size: var(--font-size-sm); color: var(--color-gray-500);">Just now</p>
                                                </div>
                                                <div class="star-rating-static" style="color: #fbbf24; font-size: var(--font-size-lg);">
                                                    ${'★'.repeat(response.review.rating)}${'☆'.repeat(5 - response.review.rating)}
                                                </div>
                                            </div>
                                            <p style="color: var(--color-gray-700); line-height: 1.6;">${response.review.comment}</p>
                                        </div>
                                    </div>
                                </div>
                            `;

                            $('#reviewsList').prepend(newReview);
                            $('#reviewForm').slideUp();

                        } else {
                            $('#reviewMessage').html('<div class="alert alert-danger mt-3" style="color: red;">' + response.message + '</div>');
                            submitBtn.prop('disabled', false).text('Submit Review');
                        }
                    },
                    error: function() {
                        $('#reviewMessage').html('<div class="alert alert-danger mt-3" style="color: red;">An error occurred. Please try again.</div>');
                        submitBtn.prop('disabled', false).text('Submit Review');
                    }
                });
            });
        });
    </script>
}