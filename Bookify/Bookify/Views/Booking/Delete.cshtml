@model Bookify.Data.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
    var nights = (Model.CheckOut - Model.CheckIn).Days;
}

<style>
    .delete-booking-container {
        max-width: 700px;
        margin: 0 auto;
        padding: var(--spacing-2xl) var(--spacing-md);
    }

    .delete-card {
        background: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        overflow: hidden;
    }

    .delete-header {
        background: linear-gradient(135deg, #DC2626 0%, #991B1B 100%);
        color: white;
        padding: var(--spacing-xl);
        text-align: center;
    }

    .delete-header i {
        font-size: 3rem;
        margin-bottom: var(--spacing-md);
    }

    .delete-body {
        padding: var(--spacing-2xl);
    }

    .warning-box {
        background: #FEF3C7;
        border-left: 4px solid #F59E0B;
        padding: var(--spacing-lg);
        border-radius: var(--radius-md);
        margin-bottom: var(--spacing-xl);
    }

    .booking-summary {
        background: var(--color-gray-50);
        border-radius: var(--radius-md);
        padding: var(--spacing-lg);
        margin-bottom: var(--spacing-xl);
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: var(--spacing-sm) 0;
        border-bottom: 1px solid var(--color-gray-200);
    }

    .summary-row:last-child {
        border-bottom: none;
        margin-top: var(--spacing-sm);
        padding-top: var(--spacing-md);
        font-weight: var(--font-weight-semibold);
        font-size: var(--font-size-lg);
    }

    .summary-label {
        color: var(--color-gray-600);
    }

    .summary-value {
        font-weight: var(--font-weight-medium);
    }

    .action-buttons {
        display: flex;
        gap: var(--spacing-md);
        justify-content: center;
        margin-top: var(--spacing-xl);
    }

    .btn-delete {
        background: linear-gradient(135deg, #DC2626 0%, #991B1B 100%);
        color: white;
        border: none;
    }

    .btn-delete:hover {
        background: linear-gradient(135deg, #991B1B 0%, #7F1D1D 100%);
    }

    .status-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-cancelled {
        background: #FEE2E2;
        color: #991B1B;
    }
</style>

<div class="delete-booking-container">
    <div class="delete-card">
        <div class="delete-header">
            <i class="fas fa-trash-alt"></i>
            <h2>Delete Booking</h2>
            <p style="margin: 0; opacity: 0.9;">This action cannot be undone</p>
        </div>

        <div class="delete-body">
            <div class="warning-box">
                <div style="display: flex; align-items: center; gap: var(--spacing-md);">
                    <i class="fas fa-exclamation-triangle" style="font-size: 1.5rem; color: #F59E0B;"></i>
                    <div>
                        <h4 style="margin: 0 0 4px 0; color: #92400E;">Warning</h4>
                        <p style="margin: 0; color: #92400E;">
                            You are about to permanently delete this booking. This will remove all records of this reservation from your account.
                        </p>
                    </div>
                </div>
            </div>

            <h3 class="text-primary mb-3">Booking Summary</h3>
            <div class="booking-summary">
                <div class="summary-row">
                    <span class="summary-label"><i class="fas fa-hashtag"></i> Booking ID:</span>
                    <span class="summary-value">#@Model.Id</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label"><i class="fas fa-door-open"></i> Room:</span>
                    <span class="summary-value">@(Model.Room?.Name ?? "Room #" + Model.RoomId)</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label"><i class="fas fa-calendar-check"></i> Check-In:</span>
                    <span class="summary-value">@Model.CheckIn.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label"><i class="fas fa-calendar-times"></i> Check-Out:</span>
                    <span class="summary-value">@Model.CheckOut.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label"><i class="fas fa-moon"></i> Duration:</span>
                    <span class="summary-value">@nights Night@(nights > 1 ? "s" : "")</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label"><i class="fas fa-users"></i> Guests:</span>
                    <span class="summary-value">@Model.NumberOfGuests</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label"><i class="fas fa-flag"></i> Status:</span>
                    <span class="summary-value">
                        <span class="status-badge status-cancelled">@(Model.PaymentStatus ?? "Cancelled")</span>
                    </span>
                </div>
                <div class="summary-row">
                    <span class="summary-label"><i class="fas fa-dollar-sign"></i> Total Amount:</span>
                    <span class="summary-value" style="color: var(--color-accent);">$@Model.TotalPrice.ToString("N2")</span>
                </div>
            </div>

            <p class="text-gray text-center" style="font-size: var(--font-size-sm); margin-bottom: var(--spacing-xl);">
                <i class="fas fa-info-circle"></i> 
                This booking was created on @Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
            </p>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="action-buttons">
                    <a asp-action="Index" class="btn btn-outline">
                        <i class="fas fa-arrow-left"></i> No, Keep It
                    </a>
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Are you absolutely sure you want to delete this booking? This cannot be undone.');">
                        <i class="fas fa-trash"></i> Yes, Delete Permanently
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
