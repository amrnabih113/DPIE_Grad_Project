        </p>
        <a asp-controller="Room" asp-action="Index" class="btn btn-primary btn-lg">Book Your Stay</a>
    </div>
</section>

@section Scripts {
    <script>
        function createStarRating(rating) {
            let stars = '';
            for (let i = 1; i <= 5; i++) {
                if (i <= rating) {
                    stars += '<i class="fas fa-star text-warning"></i>';
                } else if (i - 0.5 <= rating) {
                    stars += '<i class="fas fa-star-half-alt text-warning"></i>';
                } else {
                    stars += '<i class="far fa-star text-warning"></i>';
                }
            }
            return `<div class="rating">${stars}</div>`;
        }

        document.querySelectorAll('.star-rating-static').forEach(el => {
            const rating = parseFloat(el.getAttribute('data-rating'));
            el.innerHTML = createStarRating(rating);
        });

        function loadPopularRooms() {
            fetch('/Room/GetPopularRooms')
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('popularRooms');
                    if (data.length === 0) {
                        container.innerHTML = '<p class="text-center w-100">No popular rooms found.</p>';
                        return;
                    }

                    container.innerHTML = data.map(room => `
                                <div class="card fade-in">
                                  <img src="${room.firstImageUrl}" alt="${room.name}" class="card-image" onerror="this.src='https://via.placeholder.com/600x400/1E3A5F/D4AF37?text=${encodeURIComponent(room.name)}'">
                                  <div class="card-content">
                                    <h3 class="text-primary mb-2">${room.name}</h3>
                                    ${createStarRating(room.rating)}
                                    <div style="display: flex; align-items: flex-end; justify-content: space-between; margin-top: var(--spacing-md);">
                                      <div>
                                        <span style="font-size: var(--font-size-3xl); font-weight: var(--font-weight-bold); color: var(--color-primary);">$${room.pricePerNight}</span>
                                        <span style="color: var(--color-gray-500); font-size: var(--font-size-sm);"> / night</span>
                                      </div>
                                      <a href="/Room/Details/${room.id}" class="btn btn-primary">View Details</a>
                                    </div>
                                  </div>
                                </div>
                              `).join('');

                    if (typeof addFadeInAnimation === 'function') {
                        addFadeInAnimation();
                    }
                })
                .catch(error => {
                    console.error('Error loading popular rooms:', error);
                    document.getElementById('popularRooms').innerHTML = '<p class="text-center text-danger">Failed to load popular rooms.</p>';
                });
        }

        function loadRecentReviews() {
            fetch('/Room/GetRecentReviews')
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('recentReviews');
                    if (data.length === 0) {
                        container.innerHTML = '<p class="text-center w-100">No reviews yet.</p>';
                        return;
                    }

                    container.innerHTML = data.map(review => `
                                <div class="card fade-in">
                                    <div class="card-content">
                                        ${createStarRating(review.rating)}
                                        <p class="mt-3 mb-3" style="font-style: italic; color: var(--color-gray-700); overflow:hidden;">
                                            ${review.comment}
                                        </p>
                                        <div>
                                            <p style="font-weight: var(--font-weight-semibold); color: var(--color-primary);">
                                                ${review.userName}
                                            </p>
                                            <p style="font-size: var(--font-size-sm); color: var(--color-gray-500);">
                                                ${new Date(review.createdAt).toLocaleDateString()}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            `).join('');

                    if (typeof addFadeInAnimation === 'function') {
                        addFadeInAnimation();
                    }
                })
                .catch(error => {
                    console.error('Error loading reviews:', error);
                    document.getElementById('recentReviews').innerHTML = '<p class="text-center text-danger">Failed to load reviews.</p>';
                });
        }

        document.addEventListener('DOMContentLoaded', () => {
            loadPopularRooms();
            loadRecentReviews();
            if (typeof addFadeInAnimation === 'function') {
                addFadeInAnimation();
            }
        });
    </script>
}
